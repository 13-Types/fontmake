<?xml version='1.0' encoding='utf-8'?>
<designspace format="3">
    <axes>
        <axis tag="wght"
              name="Weight"
              minimum="1"
              maximum="1000"
              default="400">
            <map input="300" output="50" />
            <map input="400" output="100" />
            <map input="700" output="150" />
        </axis>
    </axes>

    <sources>
        <source familyname="MyFont" filename="MyFont-Light.ufo" stylename="Light" name="MyFont Light">
            <location>
                <dimension name="Weight" xvalue="50" />
            </location>
            <info copy="1" />
        </source>
        <source familyname="MyFont" filename="MyFont-Bold.ufo" stylename="Bold" name="MyFont Bold">
            <location>
                <dimension name="Weight" xvalue="150" />
            </location>
        </source>
    </sources>

    <instances>
        <instance familyname="MyFont" filename="MyFont-Regular.ufo" stylename="Regular">
            <location>
                <dimension name="Weight" xvalue="100" />
            </location>
            <info />
        </instance>
    </instances>
</designspace>
